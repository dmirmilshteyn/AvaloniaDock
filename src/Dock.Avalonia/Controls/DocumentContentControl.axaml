<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:Dock.Model.Controls">
  <Design.PreviewWith>
    <DocumentContentControl Width="300" Height="300" />
  </Design.PreviewWith>

  <ControlTheme x:DataType="controls:IDocumentContent" x:Key="{x:Type DocumentContentControl}" TargetType="DocumentContentControl">

    <Setter Property="Template">
      <ControlTemplate>
        <DockableControl TrackingMode="Visible">
          <ContentControl Content="{Binding}" 
                          ContentTemplate="{Binding}" />
        </DockableControl>
      </ControlTemplate>
    </Setter>

  </ControlTheme>

</ResourceDictionary>
